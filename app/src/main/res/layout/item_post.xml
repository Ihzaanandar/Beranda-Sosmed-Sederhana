<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_marginVertical="8dp"
    android:padding="8dp"
    android:elevation="2dp">

    <!-- Bagian atas: foto profil + username -->
    <!-- Bagian atas: foto profil + username + tombol menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <!-- Kiri: foto profil + username -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfilePost"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/my_profile"
                android:layout_marginEnd="8dp"
                android:contentDescription="Foto profil" />

            <TextView
                android:id="@+id/tvUsernamePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Kanan: tombol titik tiga -->
        <ImageButton
            android:id="@+id/btnMenuPost"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="Menu opsi"/>
    </LinearLayout>



    <!-- Gambar postingan -->
    <ImageView
        android:id="@+id/imgPost"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        tools:ignore="ContentDescription" />

    <!-- Caption -->
    <TextView
        android:id="@+id/tvCaptionPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Ini caption contoh."
        android:textSize="14sp"
        android:textColor="@android:color/black" />

</LinearLayout>
